<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.hbvtc.mapper.CourseMapper">

    <select id="selectAllCourses" resultType="cn.edu.hbvtc.entity.Course">
        SELECT
            course_id AS courseId,
            course_name AS courseName,
            credit
        FROM course
        ORDER BY course_id
    </select>

</mapper>